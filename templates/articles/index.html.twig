{% extends "base.html.twig" %}


{% block title %}
    SymArt Aritcle
{% endblock %}

{% block body %}
    {% if articles %}
        <table class="table container">
        <thead>
            <tr>
            <th scope="col">Articel</th>
            <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {% for article in articles%}
                <tr>
                <td scope="row">{{article.title}}</td>
                <td><a href="/article/{{ article.id }}" class="btn btn-dark">show</td>
                </tr>
            {% endfor %}
        </tbody>
        </table>   
    {% else %}
        No article display
    {%  endif %}
{% endblock %}





